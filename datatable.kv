#:kivy 2.0.0

<DataTableDialog@BoxLayout>:
    orientation: "vertical"
    spacing: "10dp"

    MDDataTable:
        pos_hint: {"center_x": .5}
        size_hint: 0.9, 0.9
        check: True
        use_pagination: True
        rows_num: 10
        column_data:
            [("ID", dp(30)),
            ("Task", dp(100)),
            ("Status", dp(60)),
            ("Due Date", dp(100))]

        # Define row data by fetching it from the database
        row_data: app.fetch_data()

<DataTableApp>:
    DataTableDialog:
